[user]
	name = Olivier Tharan
	email = olivier@tharan.org
[core]
	editor = emacs
	# editor = emacsclient -t -a vim
	pager = less -FRSX
[alias]
	alias = !git config --get-regexp alias
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
	# Criteo specific
	review = push origin HEAD:refs/publish/master
	reviewd = push origin HEAD:refs/publish/develop
        # http://caiustheory.com/git-git-git-git-git/
        git = !exec git
[grep]
	lineNumber = true
